<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
        <!-- Customize your theme here. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <item name="actionBarStyle">@style/Theme.SplashScreen</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>


<!--     Custom Action Bar Style-->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/CustomActionBarText</item>
    </style>

    <!-- Custom Text Style -->
    <style name="CustomActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000</item>
    </style>


</resources>
